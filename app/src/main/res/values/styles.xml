<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="MyCalcStyleLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@string/fontfamily</item>
        <item name="android:textSize">@dimen/fontsize</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/lightTextColor</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="srcCompat">@drawable/light</item>
    </style>

    <style name="MyCalcStyleDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:fontFamily">@string/fontfamily</item>
        <item name="android:textSize">@dimen/fontsize</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/nightTextColor</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="srcCompat">@drawable/night</item>
        <item name="colorOnPrimary">@color/nightTextColor</item>
    </style>


    <style name="defaultButtonVerticalStyle">
        <item name="android:fontFamily">@string/fontfamily</item>
        <item name="android:textSize">@dimen/fontsize</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:insetRight">@dimen/default_rightInset</item>
        //не работает :(
    </style>

    <style name="defaultButtonVerticalStyleNight">
        <item name="android:fontFamily">@string/fontfamily</item>
        <item name="android:textSize">@dimen/fontsize</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:insetRight">@dimen/default_rightInset</item>
        //не работает :(
    </style>

    <style name="defaultButtonLandStyle">
        <item name="android:fontFamily">@string/fontfamily</item>
        <item name="android:textSize">@dimen/landfontsize</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:insetRight">@dimen/default_rightInset</item>
        //не работает :(
        <item name="android:minHeight">@dimen/minHeightBtn</item>
    </style>


    <style name="defaultButtonLandStyleNight">
        <item name="android:fontFamily">@string/fontfamily</item>
        <item name="android:textSize">@dimen/landfontsize</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:insetRight">@dimen/default_rightInset</item>
        //не работает :(
        <item name="android:minHeight">@dimen/minHeightBtn</item>
        <item name="colorOnPrimary">@color/nightTextColor</item>
    </style>

    <style name="plusStyle">
        <item name="android:backgroundTint">@color/plusColor</item>
    </style>

    <style name="plusStyleNight">
        <item name="android:backgroundTint">@color/plusColorNight</item>
    </style>


    <style name="operStyle">
        <item name="android:backgroundTint">@color/operColor</item>
        <item name="android:minHeight">@dimen/minHeightBtn</item>
        <item name="android:textSize">@dimen/landfontsize</item>
    </style>

    <style name="operStyleNight">
        <item name="android:backgroundTint">@color/operColorNight</item>
        <item name="android:minHeight">@dimen/minHeightBtn</item>
        <item name="android:textSize">@dimen/landfontsize</item>
    </style>


    <style name="resetStyle">
        <item name="android:backgroundTint">@color/resetBtnColor</item>
        <item name="android:text">@string/resetBtn</item>
    </style>

    <style name="resetStyleNight">
        <item name="android:backgroundTint">@color/resetBtnColorNight</item>
        <item name="android:text">@string/resetBtn</item>
    </style>

    <style name="dotStyle">
        <item name="android:backgroundTint">@color/dotBtnColor</item>
        <item name="android:text">@string/btnDot</item>
    </style>

    <style name="dotStyleNight">
        <item name="android:backgroundTint">@color/dotBtnColorNight</item>
        <item name="android:text">@string/btnDot</item>
    </style>

    <style name="resultViewStyle">
        <item name="android:layout_margin">50dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/default_value</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/resultView</item>
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <style name="resultLandViewStyle">
        <item name="android:layout_margin">50dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/default_value</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/resultLandView</item>
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <style name="resultViewStyleNight">
        <item name="android:layout_margin">50dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/default_value</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/resultView</item>
        <item name="android:textColor">@color/nightTextColor</item>
    </style>

    <style name="resultLandViewStyleNight">
        <item name="android:layout_margin">50dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/default_value</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/resultLandView</item>
        <item name="android:textColor">@color/nightTextColor</item>
    </style>


    <style name="historyViewStyle">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/historySize</item>
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <style name="historyLandViewStyle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/historySize</item>
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <style name="historyViewStyleNight">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/historySize</item>
        <item name="android:textColor">@color/nightTextColor</item>
    </style>

    <style name="historyLandViewStyleNight">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/historySize</item>
        <item name="android:textColor">@color/nightTextColor</item>
    </style>

    <style name="settingStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:minHeight">@dimen/minHeightBtn</item>
        <item name="android:backgroundTint">@color/settingsColor</item>
    </style>

</resources>